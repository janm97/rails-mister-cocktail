<div class="container">
  <div class="text-center">
  <h1><%= @cocktail.name %></h1>
  <p>This is a sick cocktail!</p>
  <h3>Ingredients:</h3>
  <ul class="list-group">
    <% @cocktail.doses.each do |dose| %>
      <li class="list-group-item"><%= dose.description %> | <%= dose.ingredient.name %></li>
    <% end %>
  </ul>
</div>

  <div class="row justify-content-around">
    <div class="col-6">
      <h4>Add a new ingredient to your cocktail</h4>
      <%= simple_form_for([@cocktail, @dose]) do |f| %>
        <%= f.input :description %>
        <%= f.input :ingredient_id, collection: Ingredient.all %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>

<%= link_to 'All Cocktails', cocktails_path, class: 'btn btn-primary' %>


